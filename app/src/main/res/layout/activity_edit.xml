<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".AddActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Edit Hike"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginVertical="1dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:height="48dp"
            android:hint="Name of Hike" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginVertical="1dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Location"
            android:layout_width="wrap_content"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_location"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:height="48dp"
            android:hint="Location" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginVertical="1dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_date"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:height="48dp"
            android:hint="Date of Hike" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginVertical="1dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Parking" />
        <RadioGroup
            android:id="@+id/rg_parking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Yes" />
            <RadioButton
                android:id="@+id/rb_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="No" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginVertical="1dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Length" />

        <EditText
            android:id="@+id/edt_length"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:height="48dp"
            android:hint="Length of Hike" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginVertical="1dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Level"
            android:layout_width="wrap_content"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_level"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:height="48dp"
            android:hint="Level of Diffuculty" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginVertical="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Description" />

        <EditText
            android:id="@+id/edt_description"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:height="48dp"
            android:hint="Description" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginVertical="1dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Risk" />

        <EditText
            android:id="@+id/edt_risk"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:height="48dp"
            android:hint="Risk Assessment" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginVertical="1dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Vehicle"
            android:layout_width="wrap_content"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_vehicle"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:height="48dp"
            android:hint="Vehicle" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginVertical="1dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Estimated Time"
            android:layout_width="wrap_content"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_estimated_time"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:height="48dp"
            android:hint="Estimated Time" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="1dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_save"
            android:text="Save"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_cancel"
            android:text="Cancel"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>